<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Products</title>
</head>
<body>

<% if(products.length == 0) { %>
    <h3 class="alert alert-danger">There is not data</h3>
<% } else { %>
    <h2 class="text-center alert alert-warning mb-0">List of products</h2>
<table class="table table-dark table-hover text-center mb-0">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
    </tr>
</thead>
    <% products.forEach((product) => { %>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><img src='<%=product.thumbnail %>' alt="<%= product.name %>"></td>
    </tr>
        <% }) %>
</table>
<% } %>

<a href="/" class="btn btn-danger">Back to form</a>

</body>
</html>