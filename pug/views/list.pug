html(lang="en")
  head 
  meta(charset="UTF-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
  body 
    if products.length == 0
      h3(class= 'alert alert-danger')='There is not data'
    else
      h2(class="text-center alert alert-warning mb-0")='List of products'
      table(class="table table-dark table-hover text-center mb-0")
        tr
          th(scope="col")='Name'
          th(scope="col")='Price'
          th(scope="col")='Image'
        each product in products
          tr
            td=product.name
            td=product.price
            td
              img(src=product.thumbnail alt=product.name height="40px" width="40px")
 
a(href="/"
  class="btn btn-danger mt-1 mx-1"
)='Back to form'
